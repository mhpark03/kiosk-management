{
  "name": "kiosk-downloader",
  "version": "1.0.0",
  "description": "Kiosk Video Downloader - Windows application for downloading and managing kiosk videos",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win --x64",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": ["electron", "kiosk", "video", "downloader"],
  "author": "Kiosk Management System",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.kiosk.downloader",
    "productName": "Kiosk Video Downloader",
    "win": {
      "target": "nsis",
      "icon": "android-chrome-512x512.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "config.json",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    }
  }
}
