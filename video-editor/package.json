{
  "name": "kiosk-video-editor",
  "version": "1.1.0",
  "description": "Advanced Video/Audio Editor for Kiosk Management System",
  "main": "main.js",
  "scripts": {
    "start": "chcp 65001 >nul && electron .",
    "start-dev": "set NODE_ENV=development && chcp 65001 >nul && electron .",
    "build:win": "electron-builder --win --x64",
    "pack": "electron-builder --dir"
  },
  "keywords": [
    "video",
    "editor",
    "ffmpeg",
    "electron"
  ],
  "author": "Kiosk Management System",
  "license": "ISC",
  "build": {
    "appId": "com.kiosk.video-editor",
    "productName": "Kiosk Video Editor",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "ffmpeg",
        "to": "ffmpeg",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "dependencies": {
    "@google-cloud/text-to-speech": "^6.4.0",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
